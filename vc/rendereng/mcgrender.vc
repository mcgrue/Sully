/// Helper function.  Recalculates chunks.  
/// If there's a new directional vector, sets the object to on and moving.  
void mcg_calc_chunk( int idx, int delay ) 
{
    mcgIV_heap[idx].x_chunk = (mcgIV_heap[idx].final_x-mcgIV_heap[idx].x) / delay;
    mcgIV_heap[idx].y_chunk = (mcgIV_heap[idx].final_y-mcgIV_heap[idx].y) / delay;  
    
    if( mcgIV_heap[idx].x_chunk || mcgIV_heap[idx].y_chunk ) 
    {
        mcgIV_heap[idx].is_on = 1;
        mcgIV_heap[idx].is_moving = 1;
    }
}

/// Add an image to the render engine in "complex" mode.  Which means it calls the sepcified callfunc instead of mcg_draw when it's turn comes up to be drawn.
///
/// @param callfunc the custom 
int mcg_add_complex( string callfunc, int image ) 
{
    if( McGrender_active_layer < 0 )
    {
        exit( "mcg_add_complex(): there is no current active layer!" );
    }

    int i;
    if( mcgIV_heap_count >= MCGRENDER_MAX ) {
        exit( "mcg_add_complex: tried to add too many images. BAD CODER NO COFFEW." );
        return -1;
    }
    
    mcgIV_heap[mcgIV_heap_count].image      = image;
    mcgIV_heap[mcgIV_heap_count].last_time      = systemtime;
    mcgIV_heap[mcgIV_heap_count].callfunc       = callfunc;

    mcgIV_heap[mcgIV_heap_count].is_moving      = 1;
    mcgIV_heap[mcgIV_heap_count].is_on      = 1;
    mcgIV_heap[mcgIV_heap_count].is_callfunc    = 1;

    // Turn these off.  The callfunc may use them, but it's up to the user to override them.
    
    mcgIV_heap[mcgIV_heap_count].x = 0;
    mcgIV_heap[mcgIV_heap_count].y = 0;
    mcgIV_heap[mcgIV_heap_count].start_x = 0;
    mcgIV_heap[mcgIV_heap_count].start_y = 0;
    mcgIV_heap[mcgIV_heap_count].final_x = 0;
    mcgIV_heap[mcgIV_heap_count].final_y = 0;
    mcgIV_heap[mcgIV_heap_count].x_chunk = 0;
    mcgIV_heap[mcgIV_heap_count].y_chunk = 0;

    McgLayerAddImg(mcgIV_heap_count);

    //and we're spent!
    i = mcgIV_heap_count;
    mcgIV_heap_count++;
    return i;
}

