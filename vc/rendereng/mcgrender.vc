//
// encapsulates the drawing mechanisms of a non-callfunc image
//
int mcg_ticks;
void mcg_draw( int idx ) 
{
    //it's not moving...
    if( !mcgIV_heap[idx].is_moving ) 
    { 
        TBlit( (mcgIV_heap[idx].x/MC_MULTIPLIER), (mcgIV_heap[idx].y/MC_MULTIPLIER), mcgIV_heap[idx].image, screen );
//log( "  still "+str(mcgIV_heap[idx].image)+" at ("+str((mcgIV_heap[idx].x/MC_MULTIPLIER))+","+str((mcgIV_heap[idx].y/MC_MULTIPLIER))+")" );
        mcgIV_heap[idx].last_time = systemtime;
    } else { //it's moving!
        
        mcg_ticks = systemtime - mcgIV_heap[idx].last_time;
        
        mcgIV_heap[idx].x += (mcg_ticks * mcgIV_heap[idx].x_chunk);
        mcgIV_heap[idx].y += (mcg_ticks * mcgIV_heap[idx].y_chunk);
        
        mcgIV_heap[idx].last_time = systemtime;
        
        mcg_moving_helper(idx);
        
        TBlit( (mcgIV_heap[idx].x/MC_MULTIPLIER), (mcgIV_heap[idx].y/MC_MULTIPLIER), mcgIV_heap[idx].image, screen );
//log( "moving "+str(mcgIV_heap[idx].image)+" at ("+str((mcgIV_heap[idx].x/MC_MULTIPLIER))+","+str((mcgIV_heap[idx].y/MC_MULTIPLIER))+")" );    
        if( !mcg_moveCheck(idx) ) {
            mcgIV_heap[idx].is_moving = 0;
        }
    }
}


/// Helper function.  checks for overspill.  
/// Not really sure what it does at this moment.  
/// But whatever it does, it does it.
///
/// @param idx the mcgIV_heap index to do this mysterious check to.
/// @author mcgrue (befuddled)
void mcg_moving_helper( int idx ) 
{
    //true if moving in x;
    if( mcgIV_heap[idx].x_chunk ) 
    {
        //moving forward
        if( mcgIV_heap[idx].x_chunk > 0 ) 
        { 
            if( mcgIV_heap[idx].x > mcgIV_heap[idx].final_x ) 
            {
                mcgIV_heap[idx].x = mcgIV_heap[idx].final_x;
                mcgIV_heap[idx].x_chunk = 0;
            } 
        } 
        
        //moving backwards
        else 
        { 
            if( mcgIV_heap[idx].x < mcgIV_heap[idx].final_x ) 
            {
                mcgIV_heap[idx].x = mcgIV_heap[idx].final_x;
                mcgIV_heap[idx].x_chunk = 0;
            } 
        }
        
    } //done with x-moving block


    //true if moving in y;
    if( mcgIV_heap[idx].y_chunk ) 
    { 
        //moving forward
        if( mcgIV_heap[idx].y_chunk > 0 ) 
        { 
            if( mcgIV_heap[idx].y > mcgIV_heap[idx].final_y ) 
            {
                mcgIV_heap[idx].y = mcgIV_heap[idx].final_y;
                mcgIV_heap[idx].y_chunk = 0;
            } 

        } 
        
        //moving backwards
        else 
        { 
            if( mcgIV_heap[idx].y < mcgIV_heap[idx].final_y ) 
            {
                mcgIV_heap[idx].y = mcgIV_heap[idx].final_y;
                mcgIV_heap[idx].y_chunk = 0;
            } 
        }
        
    } //done with y-moving block
}

/// Helper function.  Checks to see if a moving image should be set to unmoving.
/// Called in mcg_draw();
/// @param idx the mcgIV_heap index to check.
/// @see mcg_draw()
int mcg_moveCheck( int idx ) {
    
    if( mcgIV_heap[idx].x != mcgIV_heap[idx].final_x || mcgIV_heap[idx].y != mcgIV_heap[idx].final_y ) 
    {
        return 1;
    } 
    else 
    {
        return 0;
    }
}

