/// Calls the specified mcgIV_heap entry's delete function, and erases it's image from memory.
///
/// Note, deleting from the stack will likely corrupt any index references.
/// Delete with caution! :)
void mcg_delete( int idx ) 
{
    int i;
    CallFunction( mcgIV_heap[idx].delete_callfunc );
    
    // if there's a previous image, 
    if( mcgIV_heap[idx].prev_idx > 0 ) 
    {
        //if there's a next image.
        if( mcgIV_heap[idx].next_idx > 0 )
        {
            McImgSetNextLink( mcgIV_heap[idx].prev_idx, mcgIV_heap[idx].next_idx );
            McImgSetPrevLink( mcgIV_heap[idx].next_idx, mcgIV_heap[idx].prev_idx );
        }
        else    //we were the tail.
        {
        
            McImgSetNextLink( mcgIV_heap[idx].prev_idx, -1 );           
        }
    }
    else // we were the head, make the next one the layer's head instead.
    {
        McImgSetNextLink( mcgIV_heap[idx].next_idx, -1 );
    }
    
    mcgIV_heap[idx].prev_idx = -1;
    mcgIV_heap[idx].next_idx = -1;
    mcgIV_heap[idx].layer_idx = -1;
    
