/// Adds a simple image to the renderstack.
///
/// @param start_x the starting x coordinate for this image.
/// @param start_y the starting y coordinate for this image.
/// @param end_x the ending x coordinate for this image.
/// @param end_y the ending y coordinate for this image.
/// @param delay how many hundreds of a second this image should take in getting from (start_x, start_y) to (end_x, end_y)
/// @param image the image reference to do all of this magically moving blitting.
int mcg_add_image( int start_x, int start_y, int end_x, int end_y, int delay, int image ) 
{
    if( McGrender_active_layer < 0 )
    {
        exit( "mcg_add_image(): there is no current active layer!" );
    }

    int i;
    
    //
    // Basic error checking.
    //
    if( mcgIV_heap_count >= MCGRENDER_MAX ) {
        exit( "mcg_add_image: tried to add too many images, old bean." );
        return -1;
    }

    // The image reference
    mcgIV_heap[mcgIV_heap_count].image = image;
    mcgIV_heap[mcgIV_heap_count].sprite_ref = -1;
    
    mcgIV_heap[mcgIV_heap_count].delay = delay;
    

    // Set up the coordinates
    mcgIV_heap[mcgIV_heap_count].x = start_x * MC_MULTIPLIER;
    mcgIV_heap[mcgIV_heap_count].y = start_y * MC_MULTIPLIER;
    
    mcgIV_heap[mcgIV_heap_count].start_x = mcgIV_heap[mcgIV_heap_count].x;
    mcgIV_heap[mcgIV_heap_count].start_y = mcgIV_heap[mcgIV_heap_count].y;

    mcgIV_heap[mcgIV_heap_count].final_x = end_x * MC_MULTIPLIER;
    mcgIV_heap[mcgIV_heap_count].final_y = end_y * MC_MULTIPLIER;

    mcgIV_heap[mcgIV_heap_count].is_on = 1;
    mcgIV_heap[mcgIV_heap_count].is_callfunc = 0;
    mcgIV_heap[mcgIV_heap_count].callfunc = "";
    
    mcgIV_heap[mcgIV_heap_count].delete_on_stop = 0;
    

    // calculate the chunks.
    mcg_calc_chunk( mcgIV_heap_count, delay );

    // init the time
    mcgIV_heap[mcgIV_heap_count].last_time = systemtime;
    
    McgLayerAddImg(mcgIV_heap_count);

    //and we're spent!
    i = mcgIV_heap_count;
    mcgIV_heap_count++;
    return i;
}


/// Adds a simple sprite to the renderstack.
///
/// @param start_x the starting x coordinate for this image.
/// @param start_y the starting y coordinate for this image.
/// @param end_x the ending x coordinate for this image.
/// @param end_y the ending y coordinate for this image.
/// @param delay how many hundreds of a second this image should take in getting from (start_x, start_y) to (end_x, end_y)
/// @param sprite the sprite reference to add to this renderstack.
int mcg_add_sprite( int start_x, int start_y, int end_x, int end_y, int delay, int sprite_ref ) 
{
    if( McGrender_active_layer < 0 )
    {
        exit( "mcg_add_sprite(): there is no current active layer!" );
    }

    int i;
    
    //
    // Basic error checking.
    //
    if( mcgIV_heap_count >= MCGRENDER_MAX ) {
        exit( "mcg_add_sprite: tried to add too many images, old bean." );
        return -1;
    }

    i = mcg_add_image( start_x, start_y, end_x, end_y, delay, 0 );
    mcgIV_heap[i].image = NewImage( anims[sprite_heap[sprite_ref].sanim_t].sizex, anims[sprite_heap[sprite_ref].sanim_t].sizey );
    
    RectFill(   0,0, 
            anims[sprite_heap[sprite_ref].sanim_t].sizex, anims[sprite_heap[sprite_ref].sanim_t].sizey,
            transcolor, mcgIV_heap[i].image 
    );  
    
    mcgIV_heap[i].sprite_ref = sprite_ref;

    mcgIV_sprites[mcgIV_sprite_count] = i;

    TBlitFrame( 0,0, sprite_heap[sprite_ref].sanim_t, 0, mcgIV_heap[i].image );

    mcgIV_sprite_count++;

    return i;
}



/// Reverses direction of the image's motion without altering the chunk's scalar value or the current position.
///
/// @param idx the index of the mcgIV_heap entry to reverse the direction of motion of.
void mcg_reverse( int idx ) 
{
    int temp_x, temp_y;
    
    //reverse the chunks
    mcgIV_heap[idx].x_chunk = 0 - mcgIV_heap[idx].x_chunk;
    mcgIV_heap[idx].y_chunk = 0 - mcgIV_heap[idx].y_chunk;
    
    temp_x = mcgIV_heap[idx].final_x;
    temp_y = mcgIV_heap[idx].final_y;
    
    mcgIV_heap[idx].final_x = mcgIV_heap[idx].start_x;
    mcgIV_heap[idx].final_y = mcgIV_heap[idx].start_y;

    mcgIV_heap[idx].start_x = temp_x;
    mcgIV_heap[idx].start_y = temp_y;
    
    if( !mcgIV_heap[idx].x_chunk && !mcgIV_heap[idx].y_chunk ) {
        mcg_calc_chunk( idx, mcgIV_heap[idx].delay );
    }
    
    mcgIV_heap[idx].is_moving = 1;
}




