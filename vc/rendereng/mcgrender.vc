    int i, cur_node;
    for( i=McGrender_layer_count; i>=0; i-- ) 
    {
        if( McGrender_layers[i].count )
        {

            cur_node = McGrender_layers[i].tail_idx;

            while( cur_node >= 0 )
            {
                if( mcgIV_heap[cur_node].is_on ) 
                {
                    if( mcgIV_heap[cur_node].clickable )
                    {
                        if( mcgIV_heap[cur_node].image )
                        {
                            if( 
                                DetectMyCollision(
                                    x,y,
                                    mcg_getX(cur_node), mcg_getY(cur_node), 
                                    mcg_getX(cur_node)+ImageWidth(mcgIV_heap[cur_node].image), mcg_getY(cur_node)+ImageHeight(mcgIV_heap[cur_node].image) 
                                ) 
                            ) 
