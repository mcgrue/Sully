{
    int i;

//Log( "mcg 1" );
    for( i=0; i<MCGRENDER_STACKSIZE; i++ ) 
    {
        //CallFunction( mcgIV_heap[i].delete_callfunc );
//Log( "mcg_destroy["+str(i)+"] ': "+mcgIV_heap[i].delete_callfunc+"'" );
        mcg_delete( i );
        mcgIV_heap[i].is_on = 0;
    }
//Log( "mcg 2" );   
    for( i=0; i<mcgIV_sprite_count; i++ )
    {
        FreeSprite( mcgIV_sprites[i], 1 );
    }

//Log( "mcg 3" );
//MessageBox( str(numimagehandles) );
    
    McGrender_layer_count = 0;
    mcgIV_sprite_count = 0;
    mcgIV_heap_count = 0;
    
    InitMcgrender();
}

